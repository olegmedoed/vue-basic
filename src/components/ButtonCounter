<script lang="ts">
const data = {
  count: 0,
};

export default {
  name: "ButtonCounter",
  data() {
    return data;
  },
};
</script>

<template>
  <button
    class="ButtonCounter"
    v-on:click="count++"
  >
    You clicked me {{count}} times
  </button>
</template>

<style scoped>
.ButtonCounter {
  display: block;
}
</style>
